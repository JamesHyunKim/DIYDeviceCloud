server {
        listen 80;
        listen [::]:80;

        server_name {{ broker_name }};

        location /{{ item[1] }} {
                proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
                proxy_set_header Host $http_host;
                proxy_redirect off;
                proxy_pass http://127.0.0.1:{{ gunicorn_app_port + item[0] }}/;
        }
}
